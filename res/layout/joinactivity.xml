<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/totalbox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@drawable/borderroundwhite"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/topbox"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/toparea"
            tools:ignore="MissingConstraints"
            android:text="회원가입"
            android:textColor="@color/white"
            android:gravity="center"
            android:orientation="horizontal">
        </TextView>


        <LinearLayout
            android:id="@+id/middlebox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/emailbox"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            tools:ignore="MissingConstraints"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/emailtxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:textAlignment="center"
                android:layout_weight="25"
                />

            <EditText
                android:id="@+id/emailedit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:ems="10"
                android:inputType="textEmailAddress"
                tools:ignore="TextFields"
                android:layout_weight="75"/>


        </LinearLayout>




            <LinearLayout
                android:id="@+id/pwbox"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                tools:ignore="MissingConstraints"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pwtxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="비밀번호"
                    android:textAlignment="center"
                    android:layout_weight="25"
                    />

                <EditText
                    android:id="@+id/pwedit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:ems="10"
                    android:inputType="textPassword"
                    android:layout_weight="75"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pw2box"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                tools:ignore="MissingConstraints"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/pw2txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"
                android:layout_weight="25"
                />
            <EditText
                android:id="@+id/pwedit2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:ems="10"
                android:inputType="textPassword"
                android:layout_weight="75" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/namebox"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                tools:ignore="MissingConstraints"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/nametxt"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:textAlignment="center"
                    android:layout_weight="25"
                    />

                <EditText
                    android:id="@+id/nameedit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:layout_weight="75"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/joincomplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가입 완료"
                android:background="@drawable/borderroundblue"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>