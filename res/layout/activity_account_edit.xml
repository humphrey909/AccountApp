<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account.AccountAdd"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="상세(수정)"
            android:layout_gravity="center"
            />
    </androidx.appcompat.widget.Toolbar>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_weight="90"
>
    <LinearLayout
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:id="@+id/datebox"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dateimg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="8"
            android:src="@mipmap/calendar3"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/datetxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:ems="10"
            android:layout_gravity="center"
            android:paddingStart="10dp"
            tools:ignore="TextFields,TextViewEdits"
            android:layout_weight="92"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="5dp"
        android:background="#aaa"/>


    <LinearLayout
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:id="@+id/whobox"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/whoimg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="8"
            android:src="@mipmap/profile5"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/whotxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:ems="10"
            android:layout_gravity="center"
            android:paddingStart="10dp"
            tools:ignore="TextFields"
            android:layout_weight="92"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="5dp"
        android:background="#aaa"/>

    <LinearLayout
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:id="@+id/moneybox"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/priceimg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="8"
            android:src="@mipmap/price6"
            android:layout_gravity="center"
            />
        <EditText
            android:id="@+id/pricetxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:ems="10"
            android:layout_gravity="center"
            android:paddingStart="10dp"
            android:inputType="numberDecimal"
            tools:ignore="TextFields"
            android:layout_weight="92"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="5dp"
        android:background="#aaa"/>
    <LinearLayout
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:id="@+id/objtectkindbox"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/kindsimg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="8"
            android:src="@mipmap/tag"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/usekindstxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:ems="10"
            android:layout_gravity="center"
            android:paddingStart="10dp"
            tools:ignore="TextFields"
            android:layout_weight="92"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="5dp"
        android:background="#aaa"/>
    <LinearLayout
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:id="@+id/explainbox"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/explainimg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="8"
            android:src="@mipmap/explain3"
            android:layout_gravity="center"
            />
        <EditText
            android:id="@+id/explaintxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:ems="10"
            android:layout_gravity="center"
            android:paddingStart="10dp"
            tools:ignore="TextFields"
            android:layout_weight="92"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="5dp"
        android:background="#aaa"/>
    <LinearLayout
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:id="@+id/paymentbox"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/paymentimg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="8"
            android:src="@mipmap/card"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/paymentkindstxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:ems="10"
            android:layout_gravity="center"
            android:paddingStart="10dp"
            tools:ignore="TextFields"
            android:layout_weight="92"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="5dp"
        android:background="#aaa"/>
    <LinearLayout
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:id="@+id/localbox"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/locationimt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="8"
            android:src="@mipmap/map2"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/locationtxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:ems="10"
            android:layout_gravity="center"
            android:paddingStart="10dp"
            tools:ignore="TextFields"
            android:layout_weight="92"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="5dp"
        android:background="#aaa"/>
</LinearLayout>
</LinearLayout>