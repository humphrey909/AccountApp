<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Account.AccountAdd"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="프로필 설정"
            android:layout_gravity="center"
            />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_weight="90"
        >
        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:id="@+id/aliasbox"
            android:layout_weight="10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/aliastxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="애칭"
                />

            <EditText
                android:id="@+id/aliasedit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:ems="10"
                android:text=""
                android:paddingStart="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                tools:ignore="RtlCompat,RtlSymmetry,TextFields" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="5dp"
            android:background="#aaa"/>

        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:id="@+id/myidinfobox"
            android:layout_weight="10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/myidinfotxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="나의 계정정보"
                />

            <TextView
                android:id="@+id/myidinfoedit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=""
                android:ems="9"
                android:gravity="center"
                android:layout_weight="70"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="5dp"
            android:background="#aaa"/>
        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:id="@+id/otheridinfobox"
            android:layout_weight="10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/otheridinfotxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="상대 계정정보"
                />

            <TextView
                android:id="@+id/otheridinfoedit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=""
                android:ems="9"
                android:gravity="center"
                android:layout_weight="70"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="5dp"
            android:background="#aaa"/>
        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:id="@+id/lovedatebox"
            android:layout_weight="10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lovedatetxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="사귄 날짜"
                />

            <TextView
                android:id="@+id/lovedateedit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=""
                android:ems="9"
                android:gravity="center"
                android:layout_weight="80"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="5dp"
            android:background="#aaa"/>

        <LinearLayout
            android:id="@+id/Linearspace"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="70"
            android:orientation="horizontal">



        </LinearLayout>

    </LinearLayout>
</LinearLayout>