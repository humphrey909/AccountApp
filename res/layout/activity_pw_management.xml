<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Account.AccountAdd"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="계정 비밀번호 변경"
            android:layout_gravity="center"
            />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_weight="90"
        >
        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:id="@+id/currentpwbox"
            android:layout_weight="10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/currentpwtxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="현재 비밀번호"
                />

            <EditText
                android:id="@+id/currentpwedit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:ems="10"
                android:text=""
                android:paddingStart="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                tools:ignore="RtlCompat,RtlSymmetry,TextFields" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="5dp"
            android:background="#aaa"/>
        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:id="@+id/newpwbox"
            android:layout_weight="10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/newpwtxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="새로운 비밀번호"
                />

            <EditText
                android:id="@+id/newpwedit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:ems="10"
                android:text=""
                android:paddingStart="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                tools:ignore="RtlCompat,RtlSymmetry,TextFields" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="5dp"
            android:background="#aaa"/>

        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:id="@+id/newpw2box"
            android:layout_weight="10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/newpw2txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="비밀번호 확인"
                />

            <EditText
                android:id="@+id/newpw2edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:ems="10"
                android:text=""
                android:paddingStart="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                tools:ignore="RtlCompat,RtlSymmetry,TextFields" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="5dp"
            android:background="#aaa"/>


        <LinearLayout
            android:id="@+id/Linearspace"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="70"
            android:orientation="horizontal">



        </LinearLayout>

    </LinearLayout>
</LinearLayout>